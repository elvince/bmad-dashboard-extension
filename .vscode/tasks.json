{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$esbuild", "$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch:extension",
      "type": "npm",
      "script": "watch:extension",
      "problemMatcher": "$esbuild-watch",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "watch:webview",
      "type": "npm",
      "script": "watch:webview",
      "problemMatcher": [],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "watch",
      "dependsOn": ["watch:extension", "watch:webview"],
      "group": "build",
      "isBackground": true
    },
    {
      "label": "typecheck",
      "type": "npm",
      "script": "typecheck",
      "problemMatcher": "$tsc",
      "group": "build"
    }
  ]
}
